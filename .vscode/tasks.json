{
    "version": "2.0.0",
    "tasks": [
		{
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "label": "tsc: build - tsconfig.json"
        },
        {				
            "label": "Coffeescript compile",
            "type": "shell",
            "command": "coffee",
            "args": [
                "-c",
                "-b",
                "-o",
                "public/",
                "src/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sass compiler",
            "type": "shell",
            "command": "sass",
            "args": [
                "src:public",
                "--no-source-map"
            ],
            "group": "build",
        }       
    ]
}